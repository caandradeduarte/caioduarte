<h2><%= t '.title' %></h2>

<br />

<span class="add_button">
  <%= link_to '+ ADD', new_job_path %>
</span>

<br />
<br />

<% @jobs.each do |job| %>
  <article class="item">
    <div>
      <%= label_tag :isShown %>
      <%= job.isShown ? raw('<i class="icon-check icon-large"></i>') : raw('<i class="icon-check-empty icon-large"></i>') %>
    </div>
    <div>
      <%= label_tag job.job_descriptions[0], :title %>
      <%= job.job_descriptions[0].title %>
    </div>
    <br/>
    <br/>
    <div>
      <% unless job.thumbs[0].picture.blank? %>
        <%= image_tag job.thumbs[0].picture.thumb %>
      <% else %>
        <div class="no_image">NO IMAGE</div>
      <% end %>
    </div>
    <div>
      <% unless job.thumbs[1].picture.blank? %>
        <%= image_tag job.thumbs[1].picture.thumb %>
      <% else %>
        <div class="no_image">NO IMAGE</div>
      <% end %>
    </div>
    <div>
      <% unless job.thumbs[2].picture.blank? %>
        <%= image_tag job.thumbs[2].picture.thumb %>
      <% else %>
        <div class="no_image">NO IMAGE</div>
      <% end %>
    </div>

    <div class="icons">
      <%= link_to raw('<i class="icon-edit icon-large"></i>'), edit_job_path(job) %>
      <%= link_to raw('<i class="icon-remove icon-large"></i>'), job, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </article>
<% end %>