<!DOCTYPE html>
<html>
<head>
  <title><%= t '.title' %></title>
  <%= stylesheet_link_tag    "admin", :media => "all" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div id="header-wrap">
			<h1>
				<%= link_to image_tag('/assets/logo.svg', :height => '45', :alt => t('.title'), :title => t('.logo_title') ), admin_root_path %>
			</h1>
			<nav id="menu">
				<ul>
					<li><%= link_to t('layout.users'), admin_users_path %></li>
					<li><%= link_to t('layout.languages'), admin_languages_path %></li>
					<li><%= link_to t('layout.bio'), edit_multiple_admin_bios_path %></li>
					<li><%= link_to t('layout.jobs'), admin_jobs_path %></li>
					<li>
						<% unless user_signed_in? %>
							<%= link_to t('layout.login'), :controller => :user_sessions, :action => :new %>
						<% else %>
							<%= link_to t('layout.logout'), admin_user_sessions_path, :method => :delete %>
						<% end %>
				</ul>
			</nav>
		</div>
		<nav id="languages">
			<ul>
				<li><%= link_to image_tag('/assets/pt-BR.jpg', :height => '20'), :locale => 'pt-BR' %></li>
				<li><%= link_to image_tag('/assets/en.jpg', :height => '20'), :locale => 'en' %></li>
			</ul>
		</nav>
	</header>
	<section id="content">
		<% if notice.present? %>
			<p id="notice"><%= notice %></p>
		<% end %>
		<% if alert.present? %>
			<p id="alert"><%= alert %></p>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>
