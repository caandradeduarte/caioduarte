<h2><%= t '.title' %></h2>

<br />

<span class="add_button">
  <%= link_to t('links.add'), new_admin_user_path %>
</span>

<br />
<br />

<% @users.each do |user| %>
	<article class="item">
		<div>
	  	<%= label_tag t('activerecord.attributes.user.name') %>
	    <%= user.name %>
    </div>
		<div>
	  	<%= label_tag t('activerecord.attributes.user.email') %>
	    <%= user.email %>
    </div>

	  <div class="icons">
    	<%= link_to raw('<i class="icon-edit icon-large"></i>'), edit_admin_user_path(user) %>
  	  <%= link_to raw('<i class="icon-remove icon-large"></i>'), [:admin, user], method: :delete, data: { :confirm => t('dialogs.confirm') } %>
		</div>
	</article>
<% end %>