$content-width: 660px;
$content-height: 435px;

$languages-size: <%= Language.all.count * 40 + 30 %>px;

body{
	background-image: url("../background.jpg");
	-webkit-background-size: 100% auto;
  -moz-background-size: 100% auto;
  background-size: 100% auto;
  background-position: center;
  background-attachment: fixed;
}

header {
	text-align: center;

	h1 {
		margin-top: 10px;

		img {
			-webkit-box-reflect: below -6px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(70%, transparent) , to(rgba(250, 250, 250, 0.2)));
			&.home_page {
				-webkit-box-reflect: below -6px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(10%, transparent) , to(rgba(250, 250, 250, 0.2)));
			}
		}
	}

	#header-wrap {
		width: $content-width;
		margin: 0 auto;
		position: relative;
	}

	nav#menu {
		font-family: "Helvetica CondensedLight";
		font-size: 36px;
		z-index: 1000;
		margin-top: 10px;

		&.home_page {
			position: absolute;
			top: 250px;
		}

		li {
			display: inline;

			a {
				color: #7c7c7c;
				text-decoration: none;

				&:hover, &.selected {
					color: #ffffff;
				}
			}

			div.left-line {
				display: inline-block;
				height: 2px;
				width: 246px;
				background: #cdd61f;
				margin: 12px 0;
			}

			div.right-line {
				display: inline-block;
				height: 2px;
				width: 194px;
				background: #f68b29;
				margin: 12px 0;
			}	
		}
	}

	nav#social-media {
		position: absolute;
		top: 0;
		right: -163px;
		
		text-align: left;

		li {
			display: inline;
			opacity: 0.7;
			margin-right: 10px;

			img {
				-webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(30%, transparent) , to(rgba(250, 250, 250, 0.3)));
			}

			&:hover {
				opacity: 1;
			}

			a {
				text-decoration: none;
			}
		}
	}
}

section#content {
	width: $content-width;
	height: $content-height;
	margin: 0 auto;

	display: table;

	background-color: rgba(110, 110, 110, 0.6);

	font-family: 'HelveticaNeue-UltraLight', Helvetica;
	letter-spacing: 1px;
	color: #FFFFFF;

	&.home_page {
		opacity: 0;
	}
}

footer {
	color: #FFFFFF;
	text-align: center;

	p {
		font-size: 10px;
		padding: 5px 0;
	}
	#footer-wrap {
		width: $content-width;
		margin: 0 auto;
		position: relative;
	}

	nav#languages {
		position: absolute;
		top: 10px;
		left: -$languages-size;

		ul { float: right;}

		li{
			display: inline;
			opacity: 0.7;
			padding-right: 10px;

			img {
				-webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(50%, transparent) , to(rgba(250, 250, 250, 0.3)));
			}

			&:hover {
				opacity: 1;
			}

			a {
				text-decoration: none;
			}
		}
	}
}