$content-width: 660px;
$content-height: 435px;

$languages-size: <%= Language.all.count * 40 + 30 %>px;
<% is_home = true if @job || @bios || @contact %>

body{
	background-image: url("../background.jpg");
	-webkit-background-size: 100% auto;
  -moz-background-size: 100% auto;
  background-size: 100% auto;
  background-position: center;
  background-attachment: fixed;
}

header {
	text-align: center;

	h1 {
		margin-top: 10px;
	}

	#header-wrap {
		width: $content-width;
		margin: 0 auto;
		position: relative;
	}

	nav#menu {
		font-family: "Helvetica CondensedLight";
		font-size: 36px;

		<% unless is_home %>
			position: absolute;
			top: 250px;
		<% else %>
			margin-top: 10px;
		<% end %>

		li {
			display: inline;
			color: #7c7c7c;

			&:hover {
				color: #ffffff;
			}

			a {
				text-decoration: none;
			}

			div.left-line {
				display: inline-block;
				height: 2px;
				width: 246px;
				background: #cdd61f;
				margin: 12px 0;
			}

			div.right-line {
				display: inline-block;
				height: 2px;
				width: 194px;
				background: #f68b29;
				margin: 12px 0;
			}	
		}
	}

	nav#social-media {
		position: absolute;
		top: 0;
		right: -163px;
		
		text-align: left;

		li {
			display: inline;
			opacity: 0.7;
			margin-right: 10px;

			&:hover {
				opacity: 1;
			}

			a {
				text-decoration: none;
			}
		}
	}
}

section#content {
	width: $content-width;
	height: $content-height;
	margin: 0 auto;

	background-color: #6e6e6e;
	<% unless is_home %>
		opacity: 0;
	<% else %>
		opacity: 0.7;
	<% end %>

	position: relative;	
}

footer {
	color: #FFFFFF;
	text-align: center;

	p {
		font-size: 10px;
		padding: 5px 0;
	}
	#footer-wrap {
		width: $content-width;
		margin: 0 auto;
		position: relative;
	}

	nav#languages {
		position: absolute;
		top: 10px;
		left: -$languages-size;

		ul { float: right;}

		li{
			display: inline;
			opacity: 0.7;
			padding-right: 10px;

			&:hover {
				opacity: 1;
			}

			a {
				text-decoration: none;
			}
		}
	}
}